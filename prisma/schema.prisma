generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum ProductType {
  BOOK
  MOVIE
  OTHER
}

model Product {
  id                String          @id @default(cuid())
  name              String
  price             Float
  type              ProductType     @default(OTHER)
  productCategoryId String          @map("product_category_id")
  productCategory   ProductCategory @relation(fields: [productCategoryId], references: [id])
  productOrders     ProductOrder[]
  createdAt         DateTime        @default(now()) @map("created_at")
  updatedAt         DateTime        @updatedAt @map("updated_at")
  deletedAt         DateTime?       @map("deleted_at")

  @@map("product")
}

model ProductCategory {
  id        String    @id @default(cuid())
  name      String
  products  Product[]
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  @@map("product_category")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  orders    Order[]
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("user")
}

// Add a table Order with the following fields :
// - id
// - userId (relation User)
// - productOrders (relation productOrders[])

model Order {
  id            String         @id @default(cuid())
  userId        String         @map("user_id")
  user          User           @relation(fields: [userId], references: [id])
  productOrders ProductOrder[]
  createdAt     DateTime       @default(now()) @map("created_at")
  updatedAt     DateTime       @updatedAt @map("updated_at")

  @@map("order")
}

// Add a table ProductOrder with the following fields :
// - id
// - productId (relation Product)
// - orderId (relation Order)
// - quantity

model ProductOrder {
  id        String   @id @default(cuid())
  productId String   @map("product_id")
  product   Product  @relation(fields: [productId], references: [id])
  orderId   String   @map("order_id")
  order     Order    @relation(fields: [orderId], references: [id])
  quantity  Int      @default(1)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("product_order")
}
